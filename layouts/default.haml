!!!
%html{ :lang => "en" }
  %head
    %meta{ :charset => "utf-8" }
    %title
      Casa Uno -
      = @item[:title]
    %link{ :rel => "stylesheet", :href => "/style/screen.css", :media => "screen" }
    %link{ :rel => "stylesheet", :href => "/style/print.css",  :media => "print" }
    /[if !IE]
      %link{ :rel => "stylesheet", :href => "/style/fonts.css" }
    /[if IE]
      %link{ :rel => "stylesheet", :href => "/style/fonts.css" }

    %script{ :src => "javascript/jquery.js",              :type => "text/javascript", :charset => "utf-8" }
    %script{ :src => "javascript/jquery-colorbox-min.js", :type => "text/javascript", :charset => "utf-8" }
    %script{ :src => "javascript/main.js",                :type => "text/javascript", :charset => "utf-8" }

    %meta{ :name => "viewport", :content => "width=device-width" }
  %body
    #main
      #sidebar
        %ul.nav
          - site_sections(@item).each do |label, link, li_class|
            %li{ :class => "site-section #{li_class}" }
              %a{ :href => link }= label
          - external_links.each do |label, link|
            %li.external-link
              %a{ :href => link }= label
      #content.blog-text
        %h1= @item[:title]
        = yield
    -# = render('snippets/google_analytics')
